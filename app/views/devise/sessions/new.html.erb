

  <div class="ui centered  relaxed  grid">

      <div class="one wide column"></div>

    <div class="sixteen wide column">

      <div class="ui segment ">

        <h2 class="ui center aligned dividing header"><i class="sign in icon"></i>Вход</h2>

        <div class="ui form ">
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="field">
            <%= f.label :email %>
            <div class="ui left icon input">
            <%= f.email_field :email, autofocus: true ,placeholder:"Email"%>
            <i class="user icon"></i>
            </div>
          </div>

          <br>
            <br>

          <div class="field">
            <%= f.label :password , "Пароль"%>
            <div class="ui left icon input">
            <%= f.password_field :password, autocomplete: "off" ,placeholder:"Пароль"%>
            <i class="lock icon"></i>
            </div>
          </div>
          <br>


              <div class="ui center aligned header">
                  <div class="actions">
                    <%= f.submit "Войти" ,class: "ui submit button primary "%>
                  </div>
              </div>

        <% end %>
        <div class="ui horizontal divider">Или</div>
        <div class="ui celled horizontal list">
          <%= render "devise/shared/links" %>
        </div>

        </div>
      </div>
    </div>

  <div class="one wide column"></div>

</div>
